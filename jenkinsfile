pipeline {
    agent any 
    stages {
        stage('Build'){
            steps
            {
                echo 'Build'
            }

        }
        stage('Test'){
            steps{
                echo 'Test'
            }
        }
       stage('Sonarqube')
       {
        steps{
            echo 'Sonarqube'
        }
       }
       stage('Push to artifactory'){
        steps{
            echo 'push to artifctory'
        }
       }
       stage('Deploy to QA'){
        steps{
            echo 'deploy to QA'

        }
       }
       stage('Deploy to Prod')
       {
        steps{
            echo 'Deploy to Prod'
        }
       }
    }
    post{
        failure{
            echo 'Failed'
        }
        success{
            echo 'Success'
        }
        aborted{
            echo 'aborted' 
             
        }
        always
        {
            echo 'always'
        }
    }
}